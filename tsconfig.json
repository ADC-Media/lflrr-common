{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "target": "ES2021",
    "outDir": ".",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "lib": ["es6", "dom"],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
